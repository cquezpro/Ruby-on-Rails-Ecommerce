 
 
    <%= form_tag({:action => 'attempt_login'}, {:class => 'form-signin'})  do %>
    
        <h2 class="form-signin-heading">Please sign in</h2>
        <%= text_field_tag :email,nil,{class: "form-control",placeholder: "Email"}   %>
        <%= password_field_tag :password,nil,{class: "form-control",placeholder: "Password" }  %>
        <%= submit_tag "Sign in", class: "btn btn-lg btn-primary btn-block" %>
        <br />
        <%= link_to("Sign Up", {:action => 'registration'}) %>

    <% end %>