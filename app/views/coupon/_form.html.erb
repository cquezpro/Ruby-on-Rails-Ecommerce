
<%= render 'application/error_messages', object: @coupon %>

<div class="form-group">
      <%= f.label(:coupon_code) %>
      <%= f.text_field :coupon_code,class: "form-control",placeholder: "Coupon code"  %>
</div>

<div class="form-group">
      <%= f.label(:coupon_discount) %>
      <%= f.text_field :coupon_discount,class: "form-control",placeholder: "Coupon Discount"  %>
</div>


<div class="form-group">
      <%= f.label(:product_id) %>
          <% product = Product.all %>
        <select name="coupon[product_id]" class = "form-control">
            <% product.each do |p| %>
               <option value="<%= p.id %>"><%= "#{p.product_name}" %></option>
            <% end %>
        </select>
      
</div>