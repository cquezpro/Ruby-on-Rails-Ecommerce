
<%= render 'application/error_messages', object: @subcategory %>

	<div class="form-group">
      <%= f.label(:category_id) %>
          <% category = Category.all %>
         <select name="subcategory[category_id]" class = "form-control">
            <% category.each do |c| %>
               <option value="<%= c.id %>"><%= "#{c.name}" %></option>
            <% end %>
         </select>
      
   </div>

   <div class="form-group">
      <%= f.label(:subcategory_name) %>
      <%= f.text_field :name,class: "form-control",placeholder: "Subcategory Name"  %>
   </div>
       
   <div class="form-group">
      <%= f.label(:subcategory_desc) %>
      <%= f.text_field :description,class: "form-control",placeholder: "Subcategory Description"  %>
   </div>

   