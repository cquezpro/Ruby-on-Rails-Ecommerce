<%= render 'application/error_messages', object: @product %>

	<div class="form-group">
      <%= f.label(:category_id) %>
          <% subcategory = Subcategory.all %>
         <select name="subcategory_id" class = "form-control">
            <% subcategory.each do |c| %>
               <option value="<%= c.id %>"><%= "#{c.name}" %></option>
            <% end %>
         </select>
      
   </div>

   <div class="form-group">
      <%= f.label(:product_name) %>
      <%= f.text_field :product_name, name: "product_name",class: "form-control",placeholder: "Product Name"  %>
   </div>

   <div class="form-group">
      <%= f.label(:price) %>
      <%= f.text_field :price, name: "price", class: "form-control",placeholder: "Price"  %>
   </div>

   <div class="form-group">
      <%= f.label(:qty) %>
      <%= f.text_field :qty, name: "qty", class: "form-control",
      placeholder: "Quantity"  %>
   </div>

   <div class="form-group">
      <%= f.label(:discount) %>
      <%= f.text_field :discount, name: "discount", class: "form-control",placeholder: "Discount"  %>
   </div>

   <div class="form-group">
      <%= f.label(:tax) %>
      <%= f.text_field :tax, name: "tax", class: "form-control",placeholder: "Tax"  %>
   </div>
     
   <div class="form-group">
      <%= f.label(:product_desc) %>
      <%= f.text_field :product_desc, name: "product_desc", class: "form-control",placeholder: "Product Description"  %>
   </div>

   <div class="form-group">
      <%= f.label(:product_image) %>
      <%= f.file_field :product_image, name: "product_img", class: "form-control" %>
   </div>